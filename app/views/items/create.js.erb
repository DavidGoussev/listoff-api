<% if @item.valid? %>
  $('<%=".js-items-#{@item.list.id}"%>').append("<%= escape_javascript(render(@item)) %>");
  $('<%= ".new-item-#{@item.list.id}" %>').html("<%= escape_javascript(render partial: 'items/form', locals: { list: @list, item: @new_item }) %>");
  $('.flash').html("<%= escape_javascript(render partial: 'layouts/flash', locals: { flash: flash }) %>");
<% else %>
  $('.new-item').html("<%= escape_javascript(render partial: 'items/form', locals: { list: @list, item: @item }) %>");
  $('.flash').html("<%= escape_javascript(render partial: 'layouts/flash', locals: { flash: flash }) %>");
  $('#flashnotice').focus();
<% end %>
